{
  "name": "Comline",
  "scopeName": "source.comline",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#operators" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.comline",
          "match": "//.*$"
        },
        {
          "name": "comment.block.comline",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.comline",
          "match": "\\b(struct|enum|protocol|const|use|import|namespace|option)\\b"
        },
        {
          "name": "storage.modifier.comline",
          "match": "\\b(pub|mut)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "support.type.primitive.comline",
          "match": "\\b(i8|i16|i32|i64|i128|u8|u16|u32|u64|u128|f32|f64|bool|string|bytes)\\b"
        },
        {
          "name": "support.type.collection.comline",
          "match": "\\b(list|map|set|option)\\b"
        },
        {
          "name": "entity.name.type.comline",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.comline",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.comline",
              "match": "\\\\([\"\\\\/bfnrt]|u[0-9a-fA-F]{4})"
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.comline",
          "match": "\\b\\d+\\.\\d+([eE][+-]?\\d+)?\\b"
        },
        {
          "name": "constant.numeric.integer.comline",
          "match": "\\b\\d+\\b"
        },
        {
          "name": "constant.numeric.hex.comline",
          "match": "\\b0[xX][0-9a-fA-F]+\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comline",
          "match": "[=:,<>?]"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.comline",
          "match": "\\b[a-z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
